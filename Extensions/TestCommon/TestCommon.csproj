<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
    <EnableDefaultItems>false</EnableDefaultItems>
  </PropertyGroup>

  <PropertyGroup>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <OutputType>Library</OutputType>
    <RootNamespace>TestCommon</RootNamespace>
    <AssemblyName>TestCommon</AssemblyName>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>..\Extensions.snk</AssemblyOriginatorKeyFile>
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>

  <PropertyGroup Label="Debug" Condition="'$(Configuration)'=='Debug'">
    <Optimize>false</Optimize>
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
    <OutputPath>..\..\_Build\Binaries\Debug\Lib\</OutputPath>
    <DocumentationFile>..\..\_Build\Binaries\Debug\Lib\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>
    <DefineConstants>TRACE;DEBUG</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Label="Release" Condition="'$(Configuration)'=='Release'">
    <Optimize>false</Optimize>
    <DebugType>pdbonly</DebugType>
    <OutputPath>..\..\_Build\Binaries\Release\Lib\</OutputPath>
    <DocumentationFile>..\..\_Build\Binaries\Release\Lib\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>
    <DefineConstants>TRACE</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\..\_Build\ProductInfo.cs">
      <Link>Properties\ProductInfo.cs</Link>
    </Compile>
    <Compile Include="AssemblyExtensions.cs" />
    <Compile Include="CommonModelTest.cs" />
    <Compile Include="DomainConfigurationFactory.cs" />
    <Compile Include="HasAccessToConfigurationTest.cs" />
    <Compile Include="Model\Bar.cs" />
    <Compile Include="Model\Bar2.cs" />
    <Compile Include="Model\Foo.cs" />
    <Compile Include="Model\Foo2.cs" />
    <Compile Include="Model\LinqCompilerContainer.cs" />
    <Compile Include="Model\Point.cs" />
    <Compile Include="Model\Rectangle.cs" />
    <Compile Include="Properties\AssemblyInfo.cs" />
    <Compile Include="TestConfiguration.cs" />
    <Compile Include="Tests\TestConfigurationTest.cs" />
  </ItemGroup>
  <ItemGroup>
    <None Include="App.config" />
    <None Include="Orm.config">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="15.9.0" />
    <PackageReference Include="NUnit" Version="3.8.0" />
    <PackageReference Include="NUnit3TestAdapter" Version="3.8.0" />
    <PackageReference Include="System.Configuration.ConfigurationManager" Version="4.5.0" />
  </ItemGroup>

  <!-- Reference to Xtensive.Orm.Core package is in external file-->
  <Import Project="..\..\OrmReference.props" />

</Project>
