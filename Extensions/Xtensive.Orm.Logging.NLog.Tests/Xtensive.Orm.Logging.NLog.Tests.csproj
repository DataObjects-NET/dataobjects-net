  </PropertyGroup>

  <PropertyGroup Label="Release" Condition="'$(Configuration)'=='Release'">
    <Optimize>true</Optimize>
    <DebugType>pdbonly</DebugType>
    <OutputPath>..\..\_Build\Release\lib\</OutputPath>
