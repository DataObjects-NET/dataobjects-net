    <ProjectReference Include="..\Xtensive.Orm\Xtensive.Orm.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\..\_Build\ProductInfo\ProductInfo.cs">
      <Link>Properties\ProductInfo.cs</Link>
    </Compile>
